{
  "name": "km-api",
  "version": "0.1.1",
  "license": "MIT",
  "description": "its package for make api services easy",
  "main": "build/js/index.js",
  "module": "build/esm/index.mjs",
  "types": "build/types/index.d.ts",
  "typings": "build/types/index.d.ts",
  "browser": {
    "./browser-cjs.js": "./cjs/index.cjs",
    "./browser-esm.js": "./mjs/index.mjs"
  },
  "repository": {
    "url": "git+https://github.com/komeilm76/km-api.git"
  },
  "scripts": {
    "fix:prettier": "prettier \"src/**/*.{ts,json}\" --write && prettier \"*.json\" --write",
    "fix": "bun run fix:prettier",
    "dev": "bun --watch run ./src/index.ts",
    "build:types": "tsc",
    "build:tsup": "bun run build:types && tsup",
    "build": "bun run build:types && bun run build:tsup",
    "publish-directly": "npm publish --access public",
    "auto-release": "npm run fix:prettier && npm run build && release-it"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "release-it": "^19.2.2",
    "typescript": "~5.9.2",
    "prettier": "^2.1.1"
  },
  "engines": {
    "node": ">=14"
  },
  "files": [
    "build",
    "src",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "tsup",
    "bun",
    "release",
    "publish",
    "typeScript",
    "km-packages",
    "km-api",
    "zod",
    "api"
  ],
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "node": "./build/js/index.js",
      "types": "./build/types/index.d.ts",
      "require": "./build/cjs/index.cjs",
      "import": "./build/esm/index.mjs",
      "default": "./build/js/index.js"
    },
    "./esm": {
      "types": "./build/esm/index.d.mts",
      "import": "./build/esm/index.mjs"
    },
    "./js": {
      "types": "./build/js/index.d.mts",
      "default": "./build/js/index.js"
    },
    "./cjs": {
      "types": "./build/cjs/index.d.ts",
      "require": "./build/cjs/index.cjs"
    },
    "./assets/*": "./src/assets/*"
  },
  "dependencies": {
    "km-type": "^0.0.6",
    "tsup": "^8.5.0",
    "zod": "^4.2.1"
  }
}
